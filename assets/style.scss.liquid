$base-font-family: "MarkWeb", Helvetica;
$base-font-size: 16px;
$h1-font-size: floor($base-font-size * 2.6);
$h2-font-size: floor($base-font-size * 2.15); 
$h3-font-size: ceil($base-font-size * 1.6); 
$h4-font-size: ceil($base-font-size * 1.2); 
$h5-font-size: $base-font-size;
$h6-font-size: $base-font-size * 0.7; 
 
html, 
body {
  background-color: $background-color;
  font-size: $base-font-size;
  line-height: 1.6;
  font-family: $base-font-family;
  color: $darkgray;
}
h3,
h4,
h5 {
