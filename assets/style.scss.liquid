// INTRO // -------------------------------
#intro {
  position: relative;
  padding-top: 0px;
}
.wiggle {
  margin: 3.5em 0 1em 0;
  clear: both;
  background-repeat: no-repeat;
  background-position: left;
  height: 15px;
  visibility: visible;
}
@media (max-width: 767px) { 
  .intro-mobile-img {
    visibility: visible;
    margin-bottom: 2em;
    width: 100%;
  }
  .intro-logo {
    background-color: transparent;
  }
  .wiggle {
    display: none;
    visibility: hidden;
  }
}
@media (min-width: 768px) {
  .intro-logo img {
    max-width: 90%;
  }
  .intro-mobile-img {
    visibility: hidden;
    display: none;
  }
  $intro-brand-height: 500px;
  .intro-brand {
    position: absolute; 
    top: 45%; 
    height: $intro-brand-height; 
    margin-top: -($intro-brand-height/2);
  }
  .wiggle {
    width: 750px;
    background-image: url('{{ "wiggle-750.png" | asset_url }}');
  }
}
@media (max-width: 991px) {
  .wiggle {
    max-width: 100%;
    background-image: url('{{ "wiggle-390.png" | asset_url }}');
  }
}
@media (min-width: 992px) {
  .wiggle {
    width: 323px;
    background-image: url('{{ "wiggle-323.png" | asset_url }}');
  }
}
@media (min-width: 1200px) {
    .wiggle {
    width: 390px;
    background-image: url('{{ "wiggle-390.png" | asset_url }}');
  }
}

img,
#the-felt img {
  max-width: 100%;
  margin-left: auto;
  margin-right: auto;
}
@media (min-width: 768px) {
  .intro-logo {
    margin-top: 4%;
    margin-bottom: $page-spacing;
  }
}
.intro-text {}
#intro h4 {
  font-weight: normal;
}
@media (min-width: 768px) {
  #intro {
    height: 100vh;
    background: url('{{ "landing-992.png" | asset_url }}') no-repeat center right;
    -webkit-background-size: cover;
    -moz-background-size: cover;
