// BUTTONS // ---------------------------
button,
.btn,
.btn-secondary,
.btn-lg {
  border-radius: 0px;
  background-color: $background-color;
}
.btn.btn-secondary {
  font-size: $base-font-size;
  border-color: $darkgray;
  padding: 0.5rem 0.75rem;
}
.btn.btn-lg,
.btn-lg,
.btn.btn-secondary.btn-lg {
  font-size: $base-font-size;
  font-family: "MarkWebBold";
  text-transform: uppercase;
  font-weight: bold;
  letter-spacing: 0.1rem;
  color: $darkgray;
  border-color: $darkgray;
  padding: 1.5rem 2rem;
  border-width: 2px;
  margin-top: $page-spacing*0.75;
  margin-bottom: $page-spacing;
}
.btn-green,
.btn.btn-secondary.btn-green {
  border-color: $green;
  color: $green;
}
.btn.btn-secondary.btn-lg.btn-green {
  margin-top: $page-spacing/2;
  padding: 1.5rem 2rem;
  border-width: 3px;
}
.btn.btn-secondary.btn-lg.btn-green:hover {
  background-color: $verylightgray;
}
.btn-checkout,
.btn.btn-secondary.btn-checkout {
  color: $background-color;
  background-color: $green;
  border-color: $green;
}
.btn-checkout:hover,
.btn.btn-secondary.btn-checkout:hover {
  background-color: lighten($green, 10%);
  border-color: lighten($green, 10%);
}
// SELECT DROPDOWN FOR PRODUCT VARIATIONS // ----
select {
  cursor: pointer;
  appearance: none;
  -webkit-appearance: none; 
  -moz-appearance: none; 
  height: 40px;
  padding: 6px 30px 6px 10px;
  background-color: #FFF;
  border: 1px solid $darkgray;
  border-radius: 0px;
}
select:hover {
  background-color: $verylightgray;
}
.selector-wrapper label {
  margin-right: 0.5em;
}
// caret
.selector-wrapper::after {
  content: "";
  display: inline-block;
  width: 0;
  height: 0;
  margin-left: -20px;
  vertical-align: middle;
  border-top: 4px dashed;
  border-right: 4px solid transparent;
  border-left: 4px solid transparent;
  border-top-color: $darkgray;
  pointer-events: none;
}
select::-ms-expand { display: none; } // hide default down arrow in IE10
_:-o-prefocus, .selector {
  .styled-select { 
    background: none; 
  }
}
:focus {outline:none;}
::-moz-focus-inner {border:0;}

